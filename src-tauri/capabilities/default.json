{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:allow-stat",
    "fs:allow-read-text-file",
    "fs:allow-resource-read-recursive",
    {
      "identifier": "fs:scope",
      "allow": ["$RESOURCE/**/*"]
    },
    "opener:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$RESOURCE/**" },
        { "path": "$DATA/com.moaad.wisper-app/tauri-plugin-mic-recorder/*" }
      ]
    },
    "mic-recorder:default"
  ]
}
